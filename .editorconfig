root = true
[*]
end_of_line = lf
insert_final_newline = false
trim_trailing_whitespace = true

[*.{php,js}]
charset = utf-8
indent_style = space
indent_size = 4

[*.{html,htm,css,json}]
charset = utf-8
indent_style = space
indent_size = 2

[*.css]
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
